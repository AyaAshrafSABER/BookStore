<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ShoppingCartController">
    <top>
        <HBox prefHeight="54.0" prefWidth="640.0" BorderPane.alignment="CENTER">
            <children>
                <ToolBar prefHeight="57.0" prefWidth="600.0">
                    <items>
                        <ImageView fitHeight="41.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../res/goods.png" />
                            </image>
                        </ImageView>
                        <Label alignment="CENTER" contentDisplay="CENTER" nodeOrientation="RIGHT_TO_LEFT" prefHeight="47.0" prefWidth="293.0" text="Shopping Cart" textOverrun="WORD_ELLIPSIS">
                            <font>
                                <Font name="Sitka Small" size="40.0" />
                            </font>
                        </Label>
                        <Label prefHeight="17.0" prefWidth="78.0" text="User Name" />
                        <Button mnemonicParsing="false" prefHeight="34.0" prefWidth="11.0">
                            <graphic>
                                <ImageView fitHeight="29.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../res/left-arrow.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                  <Button mnemonicParsing="false">
                     <graphic>
                        <ImageView fitHeight="43.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../res/exit.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                    </items>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets bottom="20.0" />
                    </HBox.margin>
                </ToolBar>
            </children>
        </HBox>
    </top>
   <center>
      <TableView prefHeight="323.0" prefWidth="326.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="146.0" text="Item " />
          <TableColumn prefWidth="123.0" text="Price " />
            <TableColumn prefWidth="97.0" text="Quintity " />
            <TableColumn prefWidth="133.0" text="Total Price " />
        </columns>
      </TableView>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="81.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../res/money.png" />
               </image>
            </ImageView>
            <Label text="Label" />
            <Region prefHeight="74.0" prefWidth="100.0" />
            <ImageView fitHeight="79.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../res/credit-card%20(1).png" />
               </image>
            </ImageView>
            <Button mnemonicParsing="false" text="Check Out" />
         </children>
         <padding>
            <Insets left="20.0" />
         </padding>
      </VBox>
   </right>

</BorderPane>
